#include<iostream>
using namespace std;
#include<cstring>
int indexOf(const char s1[], const char s2[])
{
	int len1 = strlen(s1);
	int len2 = strlen(s2);
	if (len1 == 0 || len1 > len2)
		return -1;
	for (int i = 0; i <= len2 - len1; i++)
	{
		bool m = true;
		for (int j = 0; j < len1; j++)
		{
			if (s1[j] != s2[i + j])
				m = false;
		}
		if (m)
			return i;
	}
	return -1;
}
int main()
{
	char s1[80];
	char s2[80];
	cout << "Enter the first string: ";
		cin >> s1;
	cout << "Enter the second string: ";
		cin >> s2;
	cout << "indexOf(s1,s2)is: " << indexOf(s1, s2) << endl;
	return 0;
}
